<% title = 'Editar - ' + user.nombre %>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h4 class="mb-0">
                    <i class="bi bi-pencil"></i> Editar Usuario
                </h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/users/<%= user._id %>?_method=PUT" novalidate>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">
                            <i class="bi bi-person"></i> Nombre Completo
                        </label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="<%= user.nombre %>" required>
                        <div class="invalid-feedback">
                            Por favor ingresa un nombre v√°lido.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="correo" class="form-label">
                            <i class="bi bi-envelope"></i> Correo Electr√≥nico
                        </label>
                        <input type="email" class="form-control" id="correo" name="correo" value="<%= user.correo %>" required>
                        <div class="invalid-feedback">
                            Por favor ingresa un correo v√°lido.
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">
                            <i class="bi bi-lock"></i> Nueva Contrase√±a
                        </label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="D√©jalo en blanco para mantener la actual">
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> D√©jalo en blanco si no quieres cambiar la contrase√±a.
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="rol" class="form-label">
                            <i class="bi bi-shield"></i> Rol de Usuario
                        </label>
                        <select class="form-select" id="rol" name="rol" required>
                            <option value="admin" <%= user.rol === 'admin' ? 'selected' : '' %>>üëë Administrador</option>
                            <option value="moderador" <%= user.rol === 'moderador' ? 'selected' : '' %>>üõ°Ô∏è Moderador</option>
                            <option value="usuario" <%= user.rol === 'usuario' ? 'selected' : '' %>>üë§ Usuario</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor selecciona un rol.
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-lg"></i> Actualizar Usuario
                        </button>
                        <a href="/users/<%= user._id %>" class="btn btn-outline-info">
                            <i class="bi bi-eye"></i> Ver Usuario
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a la lista
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>