<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar-brand {
            font-weight: bold;
        }
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-delete:hover {
            background-color: #bb2d3b;
            border-color: #b02a37;
        }
        .table th {
            background-color: #e9ecef;
        }
        .container-main {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <!-- Navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-people-fill me-2"></i>
                Gestión de Usuarios
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="bi bi-house me-1"></i>
                    Inicio
                </a>
                <a class="nav-link" href="/agregar">
                    <i class="bi bi-person-plus me-1"></i>
                    Agregar Usuario
                </a>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <div class="container container-main">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>
                            Lista de Usuarios
                        </h2>
                        <a href="/agregar" class="btn btn-success">
                            <i class="bi bi-person-plus me-1"></i>
                            Nuevo Usuario
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (error) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <%= error %>
                            </div>
                        <% } %>

                        <% if (usuarios.length === 0) { %>
                            <div class="text-center py-5">
                                <i class="bi bi-person-x display-4 text-muted"></i>
                                <h4 class="mt-3 text-muted">No hay usuarios registrados</h4>
                                <p class="text-muted">Agrega el primer usuario haciendo clic en el botón "Nuevo Usuario"</p>
                                <a href="/agregar" class="btn btn-primary">
                                    <i class="bi bi-person-plus me-1"></i>
                                    Agregar Primer Usuario
                                </a>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                <i class="bi bi-hash me-1"></i>
                                                ID
                                            </th>
                                            <th scope="col">
                                                <i class="bi bi-person me-1"></i>
                                                Nombre
                                            </th>
                                            <th scope="col">
                                                <i class="bi bi-envelope me-1"></i>
                                                Correo Electrónico
                                            </th>
                                            <th scope="col">
                                                <i class="bi bi-calendar me-1"></i>
                                                Fecha de Registro
                                            </th>
                                            <th scope="col" class="text-center">
                                                <i class="bi bi-gear me-1"></i>
                                                Acciones
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% usuarios.forEach(usuario => { %>
                                            <tr>
                                                <th scope="row"><%= usuario.id %></th>
                                                <td>
                                                    <i class="bi bi-person-circle me-2 text-primary"></i>
                                                    <%= usuario.nombre %>
                                                </td>
                                                <td>
                                                    <i class="bi bi-envelope me-2 text-success"></i>
                                                    <%= usuario.email %>
                                                </td>
                                                <td>
                                                    <i class="bi bi-calendar-event me-2 text-info"></i>
                                                    <%= new Date(usuario.fecha_registro).toLocaleDateString('es-ES', {
                                                        year: 'numeric',
                                                        month: 'long',
                                                        day: 'numeric',
                                                        hour: '2-digit',
                                                        minute: '2-digit'
                                                    }) %>
                                                </td>
                                                <td class="text-center">
                                                    <form method="POST" action="/eliminar/<%= usuario.id %>" style="display: inline-block;" 
                                                          onsubmit="return confirmarEliminacion('<%= usuario.nombre %>')">
                                                        <button type="submit" class="btn btn-danger btn-sm" title="Eliminar usuario">
                                                            <i class="bi bi-trash me-1"></i>
                                                            Eliminar
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Total de usuarios: <strong><%= usuarios.length %></strong>
                                </small>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Confirmar eliminación
        function confirmarEliminacion(nombre) {
            return confirm(`¿Estás seguro de que deseas eliminar al usuario "${nombre}"?\n\nEsta acción no se puede deshacer.`);
        }
    </script>
</body>
</html>